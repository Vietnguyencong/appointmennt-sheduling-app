  </head>

  <body>
   
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand active" href="/"><i class="fas fa-database"></i>  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item ">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
     
      <%if current_user%>
       <li class="nav-item ">
        <%= link_to "Profile", user_path(current_user), class:"navbar-light navbar-nav nav-link"%>
      </li>
        <%if current_user.admin%>
          <li class="nav-item active">
            <a class="nav-link" href="/home/admin_view">Admin</a>
          </li>
        <% end %>
      <% end %>
    </ul>
   
 
    
    <div class="dropdown">
    <i class="fas fa-user-circle dropbtn"  onclick="myFunction()"></i>
    <div id="myDropdown" class="dropdown-content">
      <a href="users/edit">Profile</a>
      <%if current_user%>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>    
        <%= link_to "Edit profile", user_path(current_user)%>
      <% else %>
      <a href="users/sign_in">Sign in</a>
      <% end %>
    </div>
  </div>
  </div>
